{
    "root" : {
        "demand"  : true,
        "alias"   : "r",
        "desc"    : "Root path that files will be loaded relative to",
        "type"    : "string"
    },

    "extensions" : {
        "alias"   : "e",
        "desc"    : "File extensions to parse & include in config",
        "default" : "js,css",
        "type"    : "string"
    },

    "filter" : {
        "alias"   : "f",
        "desc"    : "File-name filter (regex)",
        "default" : ".",
        "type"    : "string"
    },
    
    "output" : {
        "alias"   : "o",
        "desc"    : "Output file for generated config (defaults to stdout)",
        "type"    : "string"
    },
    
    "prefix" : {
        "alias"   : "p",
        "desc"    : "Prefix for group names",
        "default" : "",
        "type"    : "string"
    },
    
    "tmpl" : {
        "alias"   : "t",
        "desc"    : "YUI config file template",
        "default" : "**/_config-template.js",
        "type"    : "string"
    },

    "css" : {
        "desc"    : "Generate config values for CSS modules",
        "default" : false,
        "type"    : "boolean"
    },

    "verbose" : {
        "default" : false,
        "type"    : "boolean"
    },

    "silent" : {
        "default" : false,
        "type"    : "boolean"
    },

    "loglevel" : {
        "default" : "info",
        "type"    : "string"
    }
}
