{
    "root" : {
        "demand"  : true,
        "alias"   : "r",
        "desc"    : "Root directory to read YUI modules from",
        "type"    : "string"
    },
    
    "extension" : {
        "desc"    : "File extension filter (regex)",
        "default" : "^\\.js$",
        "type"    : "string"
    },
    
    "filter" : {
        "alias"   : "f",
        "desc"    : "File-name filter (regex)",
        "default" : ".",
        "type"    : "string"
    },
    
    "level" : {
        "alias"   : "l",
        "desc"    : "Logging level",
        "default" : "warn",
        "type"    : "string"
    },
    
    "output" : {
        "alias"   : "o",
        "desc"    : "Output file for generated config (defaults to stdout)",
        "type"    : "string"
    },
    
    "prefix" : {
        "alias"   : "p",
        "desc"    : "Prefix for group names",
        "default" : "",
        "type"    : "string"
    },
    
    "tmpl" : {
        "alias"   : "t",
        "desc"    : "YUI config file to use as template",
        "default" : "_config-template.js",
        "type"    : "string"
    },
    
    "verbose" : {
        "alias"   : "v",
        "desc"    : "Chatty output",
        "default" : false,
        "type"    : "boolean"
    }
}
