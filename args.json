{
    "cssextensions" : {
        "desc"    : "CSS file extensions (comma-separated)",
        "default" : "css",
        "type"    : "string"
    },

    "css" : {
        "alias"   : "f",
        "desc"    : "Generate config values for CSS modules",
        "default" : false,
        "type"    : "boolean"
    },

    "filter" : {
        "alias"   : "f",
        "desc"    : "File-name filter (glob)"
    },

    "jsextensions" : {
        "desc"    : "JavaScript file extensions (comma-separated)",
        "default" : "js",
        "type"    : "string"
    },
    
    "output" : {
        "alias"   : "o",
        "desc"    : "Output file for generated config (defaults to stdout)",
        "type"    : "string"
    },
    
    "prefix" : {
        "alias"   : "p",
        "desc"    : "Prefix for group names",
        "default" : "",
        "type"    : "string"
    },

    "root" : {
        "alias"   : "r",
        "desc"    : "Root path that files will be loaded relative to",
        "type"    : "string",
        "default" : "."
    },
    
    "tmpl" : {
        "alias"   : "t",
        "desc"    : "YUI config file template",
        "default" : "**/_config-template.js",
        "type"    : "string"
    },

    "verbose" : {
        "alias"   : "v",
        "default" : false,
        "type"    : "boolean"
    },

    "silent" : {
        "default" : false,
        "type"    : "boolean"
    },

    "loglevel" : {
        "default" : "info",
        "type"    : "string"
    }
}
